<?xml version="1.0"?>
<robot name="gr2" xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <link name="base_footprint" />

    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="package://gr2_description/meshes/GR2_Main_Body.dae" />
            </geometry>
            <origin xyz="0.08 0 0" rpy="0 0 0" />
        </visual>
    </link>

    <link name="left_front_wheel_link">
        <visual>
            <geometry>
                <mesh filename="package://gr2_description/meshes/GR2_Wheel_Assembly.dae" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
    </link>

    <link name="right_front_wheel_link">
        <visual>
            <geometry>
                <mesh filename="package://gr2_description/meshes/GR2_Wheel_Assembly.dae" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
    </link>

    <link name="right_back_wheel_link">
        <visual>
            <geometry>
                <mesh filename="package://gr2_description/meshes/GR2_Wheel_Assembly.dae" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
    </link>

    <link name="left_back_wheel_link">
        <visual>
            <geometry>
                <mesh filename="package://gr2_description/meshes/GR2_Wheel_Assembly.dae" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
    </link>

    <joint name="base_joint" type="fixed" >
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.015" rpy="0 0 0" />
    </joint>

    <joint name="left_front_wheel_joint" type="continuous" >
        <parent link="base_link" />
        <child link="left_front_wheel_link" />
        <origin xyz="0.09 -0.075 0.0" rpy="0 0 1.57" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="right_front_wheel_joint" type="continuous" >
        <parent link="base_link" />
        <child link="right_front_wheel_link" />
        <origin xyz="-0.088 -0.075 0.0" rpy="0 0 -1.57" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="right_back_wheel_joint" type="continuous" >
        <parent link="base_link" />
        <child link="right_back_wheel_link" />
        <origin xyz="-0.088 0.052 0.0" rpy="0 0 -1.57" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="left_back_wheel_joint" type="continuous" >
        <parent link="base_link" />
        <child link="left_back_wheel_link" />
        <origin xyz="0.088 0.052 0.0" rpy="0 0 1.57" />
        <axis xyz="0 1 0" />
    </joint>

</robot>